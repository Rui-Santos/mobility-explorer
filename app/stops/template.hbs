{{#link-to 'index' (query-params bbox=bbox)}}<h2>Mobility Explorer</h2>{{/link-to}}
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <div class="toc" role="directory">
        <ul class="nav toc-nav">
          <li class="toc-top-level">
            {{#link-to 'routes' (query-params bbox=bbox)}}<span>Routes</span>{{/link-to}}
          </li>
          <li class="toc-top-level toc-current">
					  <a href="#" class="toc-subnav-toggle">Stops</a>
					  <ul class="toc-subnav toc-expand">
					    <li><a href="#">
					      <form>
					        <div class="form-group">
					          <input type="radio" id="radio-1" name="options">
					          <label for="radio-1">Frequency</label>
					        </div>
					        <div class="form-group">
					          <input type="radio" id="radio-2" name="options">
					          <label for="radio-2">Walkshed</label>
					        </div>
					        <div class="form-group">
					          <input type="radio" id="radio-3" name="options">
					          <label for="radio-3">Transitshed</label>
					        </div>
					      </form>
					    </a></li>
					  </ul>
					</li>
          <li class="toc-top-level">
            {{#link-to 'operators' (query-params bbox=bbox)}}<span>Operators</span>{{/link-to}}
          </li>
        </ul>
      </div>
    	<button class="btn btn-mapzen-alt" {{action "printBbox"}}>Update results</button>
    </div>
    <div id="map">
		  {{#leaflet-map bounds=bounds bbox=bbox onLoad=(action "setbbox") onMoveend=(action "updatebbox")}}
				
				{{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
				
				{{#each model as |stop|}}
			  	{{#marker-layer location=stop.location icon=icon draggable=false}}
			  		<strong>ID:</strong>{{stop.onestop_id}}<br>
			  		<strong>Name:</strong> {{stop.name}}<br>
			  		<strong>Zone ID:</strong> {{stop.tags.zone_id}}<br>
						<strong>URL:</strong> {{stop.tags.stop_url}}<br>
						<strong>Stop description:</strong> {{stop.tags.stop_desc}}<br>
						<strong>OSM way ID:</strong> {{stop.tags.osm_way_id}}<br>
						<strong>Wheelchair boarding:</strong> {{stop.tags.wheelchair_boarding}}<br>
						<strong>Operators serving stop:</strong>
							<ul>
								{{#each stop.operators_serving_stop as |operators_serving_stop|}}
					  		 <strong>{{operators_serving_stop.operator_name}}</strong>
					  		 <li>Operator Onestop ID: {{operators_serving_stop.operator_onestop_id}}</li>
					  		 <br>
					  		{{/each}}
			  			</ul>
			  		<strong>Routes serving stop:</strong>
			  			<ul>
								{{#each stop.routes_serving_stop as |routes_serving_stop|}}
									<strong>{{routes_serving_stop.route_name}}</strong>
					  			<li>Route Onestop ID: {{routes_serving_stop.route_onestop_id}}</li>
					  			<li>Operator name:{{routes_serving_stop.operator_name}}</li>
					  			<li>Operator Onestop ID: {{routes_serving_stop.operator_onestop_id}}), </li>
					  			<br>
				  			{{/each}}
		  				</ul>
			  	{{/marker-layer}}
			  {{/each}}

			{{/leaflet-map}}
		</div>
  </div>
</div>











