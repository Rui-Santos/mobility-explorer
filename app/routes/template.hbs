{{#link-to 'index' (query-params bbox=bbox)}}<h2>Mobility Explorer</h2>{{/link-to}}
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <div class="toc" role="directory">
        <ul class="nav toc-nav">
            <li class="toc-top-level">
                <li class="toc-top-level toc-current">
							    <a href="#" class="toc-subnav-toggle">Routes</a>
							    <ul class="toc-subnav toc-expand">
							      <li><a href="#">
							        <form>
							          <div class="form-group">
							            <input type="radio" id="radio-1" name="options">
							            <label for="radio-1">Mode</label>
							          </div>
							          <div class="form-group">
							            <input type="radio" id="radio-2" name="options">
							            <label for="radio-2">Operator</label>
							          </div>
							          <div class="form-group">
							            <input type="radio" id="radio-3" name="options">
							            <label for="radio-3">Bike</label>
							          </div>
							          <div class="form-group">
							            <input type="radio" id="radio-4" name="options">
							            <label for="radio-4">Wheelchair</label>
							          </div>
							          <div class="form-group">
							            <input type="radio" id="radio-5" name="options">
							            <label for="radio-5">Frequency</label>
							          </div>
							        </form>
							      </a></li>
							    </ul>
							  </li>
            </li>
            <li class="toc-top-level">
              {{#link-to 'stops' (query-params bbox=bbox)}}<span>Stops</span>{{/link-to}}
            </li>
            <li class="toc-top-level">
              {{#link-to 'operators' (query-params bbox=bbox)}}<span>Operators</span>{{/link-to}}
            </li>
        </ul>
      </div>
    	<button class="btn btn-mapzen-alt" {{action "printBbox"}}>Update results</button>
    </div>
    <div id="map">
		  {{#leaflet-map bounds=bounds bbox=bbox onLoad=(action "updatebbox") onMoveend=(action "updatebbox")}}
				
			{{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
			
			{{#each model as |route|}}
			  	{{#polyline-layer locations=route.location icon=icon draggable=false}}
						<strong>Name:</strong> {{route.name}}<br>
						<strong>Short name:</strong> {{route.short_name}}<br>
						<strong>ID:</strong> {{route.onestop_id}}<br>
						<strong>Vehicle type:</strong> {{route.vehicle_type}}<br>
						<strong>Color:</strong> {{route.color}}<br>
						<strong>URL:</strong> {{route.tags.route_url}}<br>
						<strong>Route description:</strong> {{route.tags.route_desc}}<br>
						<strong>Long name:</strong> {{route.tags.route_long_name}}<br>
						<strong>Text color:</strong> {{route.tags.route_text_color}}<br>
						<strong>Operated by:</strong> {{route.operated_by_name}}<br>
						<strong>Operator ID:</strong> {{route.operated_by_onestop_id}}<br>
				{{/polyline-layer}}
			{{/each}}

			{{/leaflet-map}}
		</div>
  </div>
</div>