              <tr>{{feed.url}}</tr>
            {{/each}}
          </td>
        </tr>
      {{/each}}
    </tbody> -->
  </div>

</row>
</container-fluid>

<row>
  <div class="col-lg-12 col-md-12 col-sm-12">
    <br>
    <p>Bounding box: <code>{{bBox}}</code></p>
  </div>
</row>

  
  

