

<div class="row">
  <div class="col-md-12 title">
    <h1>Mobility Data Explorer</h1>
  </div>
</div>

<div class="container-fluid">
  <div class="demo-controls" id="demo-controls">
  <div class="demo-control-previous"><i class="fa fa-fw fa-angle-left"></i></div>
  <ul class="demo-control-list">
    <li class="demo-control"> Transit</li>
    <li class="demo-control active">Multi-modal Routing</li>
    <li class="demo-control">Data Coverage</li>
    <li class="demo-control">API Explorer</li>
  </ul>
  <div class="demo-control-next"><i class="fa fa-fw fa-angle-right"></i></div>
</div>
  
  <div class="row">
    
    
    <div class="col-md-12 map-container">
      <div class="row">
        <p><label>{{input type="checkbox" checked=nightMode}} Night mode</label></p>
        <p>Latitude: <code>{{lat}}</code> / Longitude: <code>{{lng}}</code></p>

        {{#leaflet-map lat=lat lng=lng zoom=zoom onMoveend=(action "updateCenter")}}
          {{#if nightMode}}
            {{tile-layer url="http://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png"}}
          {{else}}
            {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
          {{/if}}
          {{#marker-layer location=emberConfLocation}}
            <h3>The Oregon Convention Center</h3>
            777 NE Martin Luther King Jr Blvd<br>
            Portland, OR 97232
          {{/marker-layer}}

          {{#marker-layer location=hotel icon="./public/assets/images/marker.png"}}
            <h3>Hotel</h3>
          {{/marker-layer}}

        {{/leaflet-map}}
      </div>
      <div class="row">
        <div class="table-wrapper"><table class="table">
          <thead>
            <tr>
              <th>Feed ID</th>
              <th>Feed URL</th>
            </tr>
          </thead>
          <tbody>
              {{#each model as |feed|}}
              <tr>
                <td>{{feed.id}}</td>
                <td>{{feed.url}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table></div>
      </div> 

    
    </div>
  </div>
  
  
  

</div>

